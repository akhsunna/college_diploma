.modal.fade.group-modal{'aria-hidden' => 'true', 'aria-labelledby' => 'myGroupModalLabel', role: 'dialog', tabindex: '-1'}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{'data-dismiss' => 'modal', :type => 'button'}
          %span{'aria-hidden' => 'true'} Ã—
          %span.sr-only Close
        %h4.modal-title New Group
      .modal-body
        = form_for @group do |f|
          %div= f.label :name
          = f.text_field :name, class: 'form-control'
          %div= f.label :course
          = f.text_field :course, class: 'form-control'
          %div= f.label :speciality
          = f.collection_select(:speciality_id, Speciality.all, :id, :short_name, class: 'btn btn-default dropdown-toggle')
          .modal-footer
            %button{'data-dismiss' => 'modal', :type => 'button', class: 'btn btn-default'} Cancel
            = f.submit 'Save', class: 'btn btn-custom'