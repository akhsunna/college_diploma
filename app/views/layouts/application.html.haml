%html
  %head
    %title Project Name
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

    - if user_signed_in?
      %nav.navbar.navbar-default
        .container
          .navbar-header
            %button.navbar-toggle.collapsed{'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', type: 'button'}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            .navbar-brand= link_to 'Project name'
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li= link_to 'Home', root_path
              %li= link_to 'Subjects', subjects_path
              %li.dropdown
                %a.dropdown-toggle{'aria-expanded' => 'false', 'data-toggle' => 'dropdown', href: '', role: 'button'}
                  = current_user.name
                  %span.caret
                %ul.dropdown-menu{role: 'menu'}
                  %li
                    %a=link_to 'Profile', user_path(current_user.id)
                  %li
                    %a=link_to 'Inbox'
                  %li
                    %a=link_to 'Users', users_path
                  %li.divider
                  %li= link_to 'Sign out', destroy_user_session_path, method: :delete









    = yield
