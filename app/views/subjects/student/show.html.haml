= link_to @subject.name, subject_path(@subject.id)
- if !@parent.root?
  - @current_path.reverse_each do |folder|
    >
    = link_to folder.name, subject_path(id: @subject.id, parent: folder)

%br

.container
  .row
    .col-md-12
      .table-responsive
        %table{ id: '#mytable', class: 'table table-bordred table-striped' }
          %thead
            %th Name
            %th Type
            %th Date
          %tbody
            - @subject.folders.where(parent_id: @parent).each do |item|
              %tr
                %td= link_to item.name, subject_path(id: @subject.id, parent: item)
                %td folder
                %td= item.updated_at.strftime('%d/%m/%Y')
            - @subject.sub_files.where(parent_id: @parent).each do |item|
              %tr
                %td= link_to item.name, subject_path(id: @subject.id, parent: item)
                %td file
                %td= item.updated_at.strftime('%d/%m/%Y')
