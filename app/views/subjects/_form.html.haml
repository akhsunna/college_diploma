%section{ id: 'newsubject' }
  .container
    .row
      .col-xs-12
        .form-wrap
          %h1 Новий предмет

          = form_for @subject do |f|
            %div= f.label 'Повна назва'
            %div= f.text_field :name, class: 'form-control'

            %div= f.label 'Скорочена назва'
            %div= f.text_field :short_name, class: 'form-control'

            %div= f.hidden_field :user_id, value: current_user.id
            %br

            %div= f.submit 'Зберегти', class: 'btn btn-custom btn-lg btn-block'