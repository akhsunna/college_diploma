.modal-dialog
  .modal-content
    .modal-header
      .modal-title-subj
        Видалення
        = '"' + @subject.short_name + '"'
    .modal-body
      %ul.errors
        Ви впевнені, що бажаєте видалити
        %b= @subject.name
        ?
      .modal-footer
        = link_to 'Так, видалити цей предмет', subject_path(@subject), method: :delete, remote: true, class: 'btn btn-danger'
        = link_to 'Ні, не видаляти', '', class: 'btn', data: { dismiss: 'modals' }