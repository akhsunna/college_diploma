.modal-dialog
  .modal-content
    .modal-header
      .modal-title-subj
        Видалення спеціальності
        = '"' + @speciality.short_name + '"'
    .modal-body
      %ul.errors
        Ви впевнені, що бажаєте видалити
        %b= @speciality.name
        ?
      .modal-footer
        = link_to 'Так, видалити цю спеціальність', speciality_path(@speciality), method: :delete, remote: true, class: 'btn btn-danger'
        = link_to 'Ні, не видаляти', '', class: 'btn', data: { dismiss: 'modals' }