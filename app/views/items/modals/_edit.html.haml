.modal-dialog
  .modal-content
    .modal-header
      %h3= "Editing #{@item.name}"

    = form_for @item, remote: true, html: { class: 'form-horizontal', style: 'display:inline;' } do |f|
      .modal-body
        %ul.errors
        .control-group
          = f.label :name, class: 'control-label'
          .controls
            = f.text_field :name
      .modal-footer
        = f.submit class: 'btn btn-primary'
        = link_to 'Cancel', '', class: 'btn', data: {dismiss: 'modal'}
