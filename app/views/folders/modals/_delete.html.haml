.modal-dialog
  .modal-content
    .modal-header
      .modal-title-subj
        Видалення
        = '"' + @folder.name + '"'
    .modal-body
      %ul.errors
        Ви впевнені, що бажаєте видалити
        %b= @folder.name
        ?
      .modal-footer
        = link_to 'Так, видалити цю теку', folder_path(@folder), method: :delete, remote: true, class: 'btn btn-danger'
        = link_to 'Ні, не видаляти', '', class: 'btn', data: { dismiss: 'modals' }