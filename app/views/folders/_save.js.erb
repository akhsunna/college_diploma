$("ul.errors").html("")
<% if @folder.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>

  $("#modals").modal("hide");
    location = "<%= subject_path(id: cookies[:current_subject], parent: @folder.parent_id) %>";
<% end %>